<%= erb :'layouts/_header' %>

<h1>Edit Pigeon</h1>

<form action="/pigeons/<%= @pigeon.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Edit Name:</label>
  <input id="name" type="text" name="name" value="<%= @pigeon.name %>">
  <label for="color">Edit Color:</label>
  <input id="color" type="text" name="color" value="<%= @pigeon.color %>">
  <label for="gender">Edit Gender:</label>
  <input id="gender" type="text" name="gender" value="<%= @pigeon.gender %>">
  <label for="lives">Edit Home:</label>
  <input id="lives" type="text" name="lives" value="<%= @pigeon.lives %>">
  <input type="submit" name="submit" value="Update">
</form>

<a class="button" href="/pigeons">Cancel</a>

<%= erb :'layouts/_footer' %>
